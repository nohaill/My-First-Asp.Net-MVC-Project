@model Project1.Models.Power

@{
    ViewData["Title"] = "Calculate Power";
}


<h3>Power Function Using ASP.NET MVC</h3>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <label asp-for="B" class="control-label">Enter Base</label>
                <input asp-for="B" class="form-control" />
                <span asp-validation-for="B" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="P" class="control-label">Enter Power</label>
                <input asp-for="P" class="form-control" />
                <span asp-validation-for="P" class="text-danger"></span>
            </div>

            <div style="font-size:18px;margin-top:12px;margin-bottom:12px;">@ViewBag.result</div>
            <div class="form-group">
                <input type="submit" value="Calculate Power" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div style="height:45vh;"></div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
